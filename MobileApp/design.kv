<LoginScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text: 'User Login'
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: 'Username'
            TextInput:
                id: password
                password:True
                hint_text: 'Password'
            RelativeLayout:
                Button:
                    text: 'Login'
                    on_press: root.login(root.ids.username.text, root.ids.password.text)
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                id: login_wrong
                text: ''
        GridLayout:
            cols:1
            spacing: 10,10
            Label:
                text:'---------- or sign in with-----------'
                font_size: '20sp'
        GridLayout:
            cols:2
            spacing: 20,20
            size_hint: 0.2,0.2
            Button:
                text: 'Facebook'
                background_color: 1,1,1,0
            Button:
                text: 'Google'
                background_color: 1,1,1,0
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 10
            Button:
                text: 'Forgot Password'
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state=='normal' else 0.5
                color: 0.1, 0.7, 1,1
            Button:
                text: 'Sign Up'
                on_press: root.sign_up() ## root refers to the class of rootwidget, here refers to the loginscreen, signup function from the main
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state=='normal' else 0.5
                color: 0.1, 0.7, 1,1

<SignUpScreen>
    GridLayout:
        cols:1
        Label:
            text: 'Sign up an exciting journey!'
        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            hint_text: 'Password'
        Button:
            text: 'SignUp'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpSuccessScreen>:
    GridLayout:
        cols:1
        Label:
            text: 'Sign Up successfully'
        Button:
            text: 'Login Page'
            on_press: root.go_to_home()
<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'quotes/logout_hover.png' if self.hovered else 'quotes/logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
        TextInput:
            id: feeling
            hint_text: 'Things to try: Happy, sad, unloved...'
        Button:
            text: 'Enlight me'
            on_press: root.get_quotes(root.ids.feeling.text)

        ScrollView:
            Label:
                id: quote
                text: ''
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'signup_screen'
    SignUpSuccessScreen
        name: 'signup_success'
    LoginScreenSuccess:
        name: 'login screen success'
